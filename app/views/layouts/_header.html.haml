.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.brand(href=root_path)= raw '{ Beauty Register&reg; }'
      be free
      %ul.nav.pull-right
        - unless user_signed_in?
          = link_to 'Log in', user_omniauth_authorize_path(:facebook), class: 'btn btn-success btn-large', style: 'margin-top:1px;'
